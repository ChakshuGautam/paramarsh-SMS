{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "PORT=8080 nest start",
    "start:dev": "PORT=8080 nest start --watch",
    "start:debug": "PORT=8080 nest start --debug --watch",
    "start:prod": "PORT=8080 node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "seed:indian": "tsx prisma/seed-indian.ts",
    "seed:minimal": "tsx prisma/seed-minimal.ts",
    "seed:large": "tsx prisma/seed-large.ts",
    "seed:validate": "tsx scripts/validate-seed-data-mcp.ts",
    "seed:validate:mcp": "tsx scripts/validate-seed-data-mcp.ts",
    "seed:validate:full": "./scripts/validate-seed.sh",
    "seed:validate:test": "bun test test/seed-data-validation.e2e-spec.ts --timeout 60000",
    "db:reset": "prisma migrate reset --force && tsx prisma/seed.ts",
    "db:reset:indian": "prisma migrate reset --force && tsx prisma/seed-indian.ts",
    "db:health": "./scripts/validate-seed.sh",
    "db:health:mcp": "tsx scripts/validate-seed-data-mcp.ts",
    "export:students": "tsx scripts/export-data-mcp.ts students",
    "export:teachers": "tsx scripts/export-data-mcp.ts teachers",
    "export:all": "tsx scripts/export-data-mcp.ts all",
    "report:validation": "tsx scripts/validate-seed-data-mcp.ts --report",
    "report:statistics": "tsx scripts/generate-stats-mcp.ts",
    "report:health-check": "tsx scripts/validate-seed-data-mcp.ts --health"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.708.0",
    "@aws-sdk/s3-request-presigner": "^3.708.0",
    "@clerk/backend": "^2.9.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^5.22.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "pdfmake": "^0.2.12",
    "prisma": "^5.17.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pdfmake": "^0.2.11",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
