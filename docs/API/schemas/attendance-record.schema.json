{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://paramarsh.example/schemas/attendance-record.schema.json",
  "title": "AttendanceRecord",
  "type": "object",
  "properties": {
    "studentId": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "periodId": { "type": "string" },
    "status": { "type": "string", "enum": ["P", "A", "L", "E"] },
    "reason": { "type": "string" }
  },
  "required": ["studentId", "date", "status"]
}
