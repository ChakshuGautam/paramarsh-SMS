{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://paramarsh.example/schemas/fee-structure.schema.json",
  "title": "FeeStructure",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "gradeId": { "type": "string" },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "amount": { "type": "number" }
        },
        "required": ["name", "amount"]
      }
    }
  },
  "required": ["gradeId", "components"]
}
